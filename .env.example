# Firebase — get these from Firebase Console → Project Settings → General → Your apps
VITE_FIREBASE_API_KEY=your-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abc123def456

# Public URL of the deployed app (used as the base for magic-link redirects).
# For local development, you can leave this empty (defaults to http://localhost:5173).
# For production (Netlify), set this to your Netlify site URL.
# Example: VITE_SITE_URL=https://maechaem-db.netlify.app
VITE_SITE_URL=

# Optional: Use Firebase Emulators for local development
# VITE_USE_FIREBASE_EMULATOR=true
