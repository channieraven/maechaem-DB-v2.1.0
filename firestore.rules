rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Get current user's profile
    function getUserProfile() {
      return get(/databases/$(database)/documents/profiles/$(request.auth.uid));
    }
    
    function isApproved() {
      return getUserProfile().data.approved == true;
    }
    
    function isWriter() {
      let role = getUserProfile().data.role;
      return role in ['staff', 'researcher', 'admin'];
    }
    
    function isAdmin() {
      return getUserProfile().data.role == 'admin';
    }

    // profiles: owner read, admin read all
    match /profiles/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow update: if request.auth.uid == userId || isAdmin();
      allow create: if request.auth.uid == userId;  // Registration
    }

    // plots: approved users read, writers write
    match /plots/{plotId} {
      allow read: if isApproved();
      allow write: if isWriter();
    }

    // trees: same
    match /trees/{treeId} {
      allow read: if isApproved();
      allow write: if isWriter();
    }

    // growth_logs: same
    match /growth_logs/{logId} {
      allow read: if isApproved();
      allow write: if isWriter();
    }

    // plot_images: same
    match /plot_images/{imageId} {
      allow read: if isApproved();
      allow write: if isWriter();
      allow delete: if isWriter();
    }

    // species: read all, admin write
    match /species/{speciesId} {
      allow read: if isApproved();
      allow write: if isAdmin();
    }
  }
}